<Page
    x:Class="applicationLauncher.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:applicationLauncher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="33" Margin="30,42,0,0"
                   Text="Quick Shortcuts" TextWrapping="Wrap"
                   VerticalAlignment="Top" Width="181" FontSize="23"/>
        <!--Buttons-->
        <Button Content="Action center" Margin="0,277,0,0" VerticalAlignment="Top"
                Height="34" Width="123" Click="Button_Click" HorizontalAlignment="Center"/>
        <Button Content="Settings" Margin="0,361,0,0" VerticalAlignment="Top"
                Height="34" Width="123" Click="settings_Click" HorizontalAlignment="Center"/>
        <Button Content="About" Margin="0,445,0,0" VerticalAlignment="Top"
                Height="34" Width="123" Click="Button_Click_2" HorizontalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="47,649,0,0" Text="*Note that not all links are available in your system." TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFEEFF00" Width="392"/>
    </Grid>
</Page>
